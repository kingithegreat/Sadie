{
  "name": "sadie-widget",
  "version": "1.0.0",
  "description": "SADIE - Structured AI Desktop Intelligence Engine Widget",
  "main": "dist/main/index.js",
  "type": "commonjs",
  "productName": "SADIE",
  "author": "kingithegreat",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && electron .",
    "test": "jest --config=jest.config.js --runInBand",
    "test:smoke": "jest --config=jest.config.js --runInBand --testPathPattern=permissions-smoke.test.ts",
    "test:file": "jest --config=jest.config.js --runInBand --testPathPattern",
    "build": "webpack --config webpack.config.js --mode production",
    "dev": "concurrently \"webpack --config webpack.config.js --mode development --watch\" \"electron .\"",
    "dist": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "e2e:install": "playwright install --with-deps",
    "e2e": "cross-env NODE_ENV=test SADIE_E2E=1 playwright test",
    "e2e:headed": "cross-env NODE_ENV=test SADIE_E2E=1 playwright test --headed",
    "capture-logs": "node ./scripts/capture-diagnostics.js",
    "clean-tests": "rmdir /s /q test-results playwright-report trace-output 2>nul || echo No test artifacts to clean",
    "release": "node ../scripts/preflight-env-check.js --require-production && npm run build && node ../scripts/preflight-env-check.js --scan-artifacts && npm run dist && node ../scripts/scan-package-integrity.js"
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "electron-reload": "^2.0.0-alpha.1",
    "mammoth": "^1.11.0",
    "node-record-lpcm16": "^1.0.1",
    "pdf-parse": "^2.4.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "whisper-node": "^1.1.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "playwright": "^1.49.0",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "com.sadie.app",
    "productName": "SADIE",
    "directories": {
      "output": "dist-electron",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
      ,
      "sign": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
