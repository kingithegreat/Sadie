{
  "app": {
    "name": "SADIE",
    "version": "0.1.0",
    "environment": "development"
  },
  "n8n": {
    "url": "http://localhost:5678",
    "webhook_path": "/webhook/sadie/chat",
    "timeout_ms": 30000
  },
  "ollama": {
    "url": "http://localhost:11434",
    "primary_model": "llama3.2:3b",
    "vision_model": "llava:latest",
    "voice_model": "whisper:latest",
    "embedding_model": "nomic-embed-text:latest",
    "temperature": 0.7,
    "timeout_ms": 60000
  },
  "widget": {
    "port": 3000,
    "hotkey": "Control+Shift+Space",
    "auto_start": true,
    "always_on_top": true,
    "opacity": 0.95,
    "width": 600,
    "height": 700,
    "position": "center"
  },
  "memory": {
    "type": "json",
    "max_conversation_history": 100,
    "retention_days": 90,
    "auto_cleanup": true
  },
  "logging": {
    "level": "info",
    "log_to_file": true,
    "max_file_size_mb": 10,
    "max_files": 5
  },
  "features": {
    "voice_input": false,
    "vision_tool": true,
    "email_integration": false,
    "api_tool": false
  }
}
